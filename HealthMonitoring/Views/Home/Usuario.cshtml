@model Common.PersonModel

@{
    Layout = null;
    ViewData["Title"] = "Usuario";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthMonitoring</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/usuario.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@40,400,0,0" />
    <script src="https://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <input type="checkbox" id="check">
    <!--header começo-->
    <header>
        <label for="check">
            <img src="~/iconv2.png" name="menu-outline" id="sidebar_btn" />
        </label>
    </header>
    <!--header final-->
    <!--sidebar começo-->
    <div class="sidebar">
        <center>
            <img src="~/tcclogo.png" class="image" alt="logo" />
        </center>
        <a href="/Home"><ion-icon name="home-outline"></ion-icon><span>Home</span></a>
        <a href="/Home/Usuario"><ion-icon name="people-outline"></ion-icon><span>Usuário</span></a>
        <a href="/Home/Medicamentos"><ion-icon name="medical-outline"></ion-icon><span>Medicamentos</span></a>
        <a href="/Home/Extras"><ion-icon name="extension-puzzle-outline"></ion-icon><span>Extras</span></a>
        <a href="/Login"><ion-icon name="log-out-outline"></ion-icon><span>Sair</span></a>
    </div>
    <div class="update-card-header">
        <h1>Usuário - Atualizar</h1>
        <br />
        <form class="update-card-form">
            <div class="mb-3">
                <span class="form-item-icon material-symbols-rounded">person</span>
                <label for="InputUserText" class="form-label">Nome de usuário</label>
                <input type="text" class="form-control" id="InputUserText" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <span class="form-item-icon material-symbols-rounded">lock</span>
                <label for="InputCurrentPassword" class="form-label">Senha atual</label>
                <input type="password" class="form-control" id="InputCurrentPassword">
            </div>
            <div class="mb-3">
                <span class="form-item-icon material-symbols-rounded">lock</span>
                <label for="InputPassword" class="form-label">Nova senha</label>
                <input type="password" class="form-control" id="InputPassword">
            </div>
            <div class="mb-3">
                <span class="form-item-icon material-symbols-rounded">lock</span>
                <label for="InputConfirmPassword" class="form-label">Confirme a nova senha</label>
                <input type="password" class="form-control" id="InputConfirmPassword">
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="checkGlico">
                <label class="form-check-label" for="checkGlico">Monitorar Glicose</label>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="checkHiper">
                <label class="form-check-label" for="checkHiper">Monitorar Hipertensão/Hipotensão</label>
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <div class="error">
                <span hidden>Senhas diferentes</span>
            </div>
        </form>
    </div>
    <!--sidebar final-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>